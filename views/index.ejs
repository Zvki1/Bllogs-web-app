<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
<!-- some ejs code  -->
 <%- include('./partials/nav.ejs') %>
  <div class="blogs content">
    <h2>All blogs</h2>
    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a href="/blogs/<%=blog._id%>" class="single">
        <div class="blog">
          <h3><%= blog.title %></h3>
          <p><%= blog.snippet %></p>
          <% }) %>
          <% }else{ %>
          
            <p>no blogs to show</p>
          <% } %>
        </div>
       
      </a>
  </div>
  <%-include('./partials/footer.ejs') %>
</body>
</html>